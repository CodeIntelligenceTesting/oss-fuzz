FROM gcr.io/oss-fuzz-base/base-builder
RUN curl -LO https://downloads.apache.org/maven/maven-3/3.6.3/binaries/apache-maven-3.6.3-bin.zip && \
    mkdir $SRC/maven && \
    unzip apache-maven-3.6.3-bin.zip -d $SRC/maven && \
    rm -f apache-maven-3.6.3-bin.zip

ENV MVN $SRC/maven/apache-maven-3.6.3/bin/mvn

ADD https://raw.githubusercontent.com/google/fuzzing/master/dictionaries/pdf.dict $SRC/PdfFuzzer.dict

RUN git clone --depth 1 https://github.com/mozilla/pdf.js pdf.js && \
    zip -q $SRC/PdfFuzzer_seed_corpus.zip pdf.js/test/pdfs/*.pdf && \
    rm -rf pdf.js

RUN svn checkout http://svn.apache.org/repos/asf/pdfbox/trunk pdfbox

COPY build.sh $SRC/
COPY PdfFuzzer.java $SRC/
WORKDIR $SRC/pdfbox/pdfbox
